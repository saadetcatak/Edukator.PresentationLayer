@model List<Edukator.EntityLayer.Concrete.Course>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kurs İşlemleri</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Kursa Git</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                     count++;
                    <tr>
                            
                        <td>@count</td>
                        <td>@item.Title</td>
                        <td>@item.Price ₺</td>
                        <td>@item.Category.CategoryName</td>
                        <td><a href="/Course/DeleteCourse/@item.CourseID" class="btn btn-outline-danger"><i class="fa fa-trash "></i>Sil</a></td>
                        <td><a href="/Course/UpdateCourse/@item.CourseID" class="btn btn-outline-success"><i class="fa fa-pencil-alt "></i>Güncelle</a></td>
                        <td><a href="#" class="btn btn-outline-dark">Siteye Git</a></td>


                    </tr>
                }
            </tbody>
        </table>
        <a href="/Course/AddCourse" class="btn btn-outline-primary">Yeni kurs Girişi</a>
    </div>
</div>


